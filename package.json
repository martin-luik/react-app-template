{
  "name": "react-app-template",
  "version": "1.0.0",
  "description": "React Application Template",
  "repository": {
    "type": "git",
    "url": "https://github.com/vergil465/react-app-template.git"
  },
  "main": "index.js",
  "scripts": {
    "start-dev": "nodemon --exec \"webpack-dev-server -d --progress --colors --config webpack.config.dev.js\"",
    "start": "npm-run-all clean build start-server",
    "start-server": "node server.js",
    "build": "webpack -p --config webpack.config.prod.js --hide-modules",
    "clean": "rimraf dist",
    "transpile": "babel src -d dist --copy-files",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-watch-all": "jest --watchAll",
    "test-coverage": "jest --coverage --colors",
    "lint": "eslint src --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer",
      "jest-emotion"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>src/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>src/__mocks__/emptyMock.js",
      "\\.(svg)$": "<rootDir>src/__mocks__/svgrMock.js"
    }
  },
  "keywords": [
    "React",
    "Application",
    "Template"
  ],
  "author": "Martin Luik",
  "license": "ISC",
  "dependencies": {
    "classnames": "^2.2.6",
    "concurrently": "^5.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jest-fetch-mock": "^3.0.3",
    "js-cookie": "^2.2.1",
    "moment": "^2.27.0",
    "npm-run-all": "^4.1.5",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-activity": "^1.2.2",
    "react-dom": "^16.13.1",
    "react-hook-form": "^6.0.1",
    "react-html-parser": "^2.0.2",
    "react-jss": "^10.3.0",
    "react-loading-skeleton": "^2.1.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "rimraf": "^3.0.2",
    "shortid": "^2.2.15"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.4",
    "@babel/polyfill": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@svgr/webpack": "^5.4.0",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/react": "^10.4.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "css-loader": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.5",
    "file-loader": "^6.0.0",
    "hard-source-webpack-plugin": "^0.13.1",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-junit": "^11.0.1",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "^2.0.5",
    "sass-loader": "^9.0.1",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^3.0.6",
    "thunk": "^0.0.1",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
